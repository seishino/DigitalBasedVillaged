<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/students_item_list"
    android:id="@+id/btnInfo"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_marginTop="2pt"
    android:layout_marginLeft="5pt"
    android:layout_marginRight="5pt"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2.4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.4"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/profile_3" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/profile_rounded" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:paddingTop="5pt"
            android:paddingBottom="5pt">
            <TextView
                android:id="@+id/txtNIK"
                android:text="1091231123425435"
                android:paddingLeft="3pt"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtName"
                android:text="Dhiaz Chebastian"
                android:paddingLeft="3pt"
                android:paddingTop="1pt"
                android:textColor="@color/colorDarkGray"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtRole"
                android:text="Anak ke-1"
                android:paddingLeft="3pt"
                android:paddingTop="1pt"
                android:textColor="@color/colorDarkGray"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:gravity="end"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnVerification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2pt"
                android:paddingRight="2pt"
                android:textSize="12dp"
                android:text="Verifikasi"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_tambah_obat"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>